<%provide(:title, "Sign In") %>

<legend>Sign In</legend>

 <%= form_for(:session, url: sessions_path) do |f| %>

 <div class="col-sm-5">
      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>


      <%= f.submit "Sign in", class: "btn btn-primary" %>
      
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
   </div>
 </div>