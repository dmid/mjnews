<ol start="1">
<% @stories.each do |story| %>


<li class="stories">


    <% if current_user != nil %>
      <% if !current_user.following?(story.id)  && current_user.id != story.user_id%>
          <%=button_to '+1', vote_story_path(story), method: :post %>
        <%end%>

      <%end%>


        <span class="title">
        <%= link_to story.title, story.url %>s
        </span>



          <%= story.url %>


           Posted <%= time_ago_in_words(story.created_at)%> ago.


           posted by: <%= story.user.name %>




  </li>




  <%end%>
</ol>
