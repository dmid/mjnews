<ol start="1" class="col-sm-10">
  <% @stories.each do |story| %>
    <li class="stories">
    <div class="vote">
      <% unless current_user == nil %>
        <% unless current_user.following?(story.id)  || current_user.id == story.user_id%>
            <%=button_to '+1', vote_story_path(story), class:"btn-primary",id:"vote_button", method: :post %>
        <%end%>
      <%end%>
    </div>

    <span class="title"> <%= link_to story.title, story.url %> </span><br />
    <span class="points">Points:<%= story.points %> </span>
    <span class= "stor_url"><%= story.url %></span>
    <span class= "posted_at ">Posted <%= time_ago_in_words(story.created_at)%> ago.</span>
    <span class="posted_by "> posted by: <%= story.user.name %></span>

  </li>
  <%end%>
</ol>
<%= will_paginate @stories %>